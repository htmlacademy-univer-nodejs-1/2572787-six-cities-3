    "got": "^14.4.2",
    "http-status-codes": "^2.3.0",
    "inversify": "^6.0.2",
    "joi": "^17.13.3",
    "jose": "^5.9.6",
    "json-server": "^0.17.4",
    "mime-types": "^2.1.35",
    "mongoose": "^8.7.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.9",
